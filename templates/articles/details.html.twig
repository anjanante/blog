{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}
    <div class="col-md-10 col-lg-8 col-xl-7">
        {# {% for article in articles %} #}
            <!-- Post preview-->
            <div class="post-preview">
                <a href="{{path('actualites_details',{'id':article.id})}}">
                    <h2 class="post-title">{{ article.titre}} </h2>
                    <h3 class="post-subtitle">{{ article.contenu|raw}}</h3>
                </a>
                
                <p class="post-meta">
                    Post√© par
                    <a href="#!">{{ article.users.email}}</a>
                    le {{article.createdAt|date('d/m/Y')}}
                </p>
            </div>
            <!-- Divider-->
            <hr class="my-4" />
        {# {% endfor %} #}
    </div>
{% endblock %}
